<div class='task-item'>
  {{! Task Item Checkbox }}
  <Task::ToggleComplete
    id={{this.inputId}}
    @value={{@task.isComplete}}
    @onChecked={{@toggleComplete}}
  />

  {{! Task Item Text }}
  <div>
    <h6 class='task-item__title'>{{@task.name}}</h6>
    <div class='task-item__text'>
      <span class='task-item__text-description'>{{@task.description}}</span>
      <span class='task-item__text-deadline'>
        Deadline: 27<sup>th</sup>
        Aug 2022
      </span>
      <img src='/img/icons/flag.svg' alt='Flag' class='task-item__text-flag' />
    </div>
  </div>

  {{! Task Item Avatars }}
  <div class='task-item__avatars'>
    {{#each @task.users as |user|}}
      <img src={{user.avatar}} alt='Default' class='task-item__avatars-image' />
    {{/each}}
  </div>

  {{! Task Item Pin }}
  <div class='task-item__pin'>
    <button type='button' {{on 'click' @togglePin}}>
      <img src='/img/icons/pin.svg' alt='Pin' />
    </button>
  </div>

  {{! Task Item Actions }}
  <div class='task-item__actions'>
    <span class='task-item__actions-item {{if @task.isComplete "active"}}'>
      {{this.status}}
    </span>
  </div>
</div>