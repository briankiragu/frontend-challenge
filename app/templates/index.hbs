<div id='index'>
  {{! Tabs Panel }}
  <div class='tabs'>
    {{! Tab Links }}
    <nav class='tabs__links'>
      <button
        type='button'
        class='tabs__links-item {{if this.isPendingTab "active"}}'
        {{on 'click' (fn this.focusTab 'active')}}
      >
        Active Tasks
      </button>
      <button
        type='button'
        class='tabs__links-item {{if this.isCompletedTab "active"}}'
        {{on 'click' (fn this.focusTab 'completed')}}
      >
        Completed Tasks
        <span class='tabs__links-item-count'>{{this.completedTaskCount}}</span>
      </button>
    </nav>

    <section class='tabs__content'>
      {{! Tab content filter }}
      <div class='tabs__content-filter'>
        <button
          type='button'
          class='tabs__content-filter__toggle border'
          {{on 'click' this.toggleFilters}}
        >
          Filter by user
        </button>

        {{#if this.showFilters}}
          <div id='users' class='tabs__content-filter__results shadow border'>
            {{#each this.model.users as |user|}}
              <button
                type='button'
                class='tabs__content-filter__results-item'
                {{on 'click' (fn this.filterTasks user.id)}}
              >
                <img src={{user.avatar}} alt={{user.id}} />
                {{user.name}}
              </button>
            {{/each}}
          </div>
        {{/if}}
      </div>

      {{#if this.isPendingTab}}
        <div class='tabs__content-item'>
          <Task::List
            @status='pending'
            @tasks={{this.pendingTasks}}
            @toggleCompleted={{this.toggleCompleted}}
          />
        </div>
      {{else}}
        <div class='tabs__content-item'>
          <Task::List
            @status='completed'
            @tasks={{this.completedTasks}}
            @toggleCompleted={{this.toggleCompleted}}
          />
        </div>
      {{/if}}
    </section>
  </div>
</div>